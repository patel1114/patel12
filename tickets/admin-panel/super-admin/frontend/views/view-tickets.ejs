<!-- Header -->

<div class="page-container">
    <div class="header-h1">
        <button class="back-btn" onclick="goBack()">â¬… Back</button>
        <h2>Ticket List</h2>
    </div>

    <table class="styled-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email-Id</th>
                <th>Subject</th>
                <th>Location</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% if (tickets.length === 0) { %>
                <tr><td colspan="5" class="no-data">No tickets available.</td></tr>
            <% } else { %>
                <% tickets.forEach(ticket => { %>
                    <tr>
                        <td><%= ticket.id %></td>
                        <td><%= ticket.email %></td>
                        <td><%= ticket.subject %></td>
                        <td><%= ticket.location %></td>
                        <td>
                            <span class="status-badge <%= ticket.status.toLowerCase().replace(' ', '-') %>">
                                <%= ticket.status %>
                            </span>
                        </td>
                    </tr>
                <% }); %>
            <% } %>
        </tbody>
    </table>
</div>

<footer class="footer">
    <p>&copy; 2024 Atul Limited. All rights reserved.</p>
</footer>

<script>
    function goBack() {
        window.history.back();
    }

    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.has('message')) {
        alert(urlParams.get('message'));
        window.location.href = "/superadmin/tickets";
    }
    if (urlParams.has('error')) {
        alert(urlParams.get('error'));
        window.location.href = "/superadmin/tickets";
    }
</script>

