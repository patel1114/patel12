<% layout('layout') -%>

<div class="dashboard-container">
    <div class="welcome-section">
        <h1>Welcome to Support Agent Dashboard</h1>
        <p class="subtitle">Here's an overview of your ticket management</p>
    </div>

    <div class="stats-container">
        <div class="stats-card total-tickets">
            <div class="stats-icon">
                <i class="fas fa-ticket-alt"></i>
            </div>
            <div class="stats-info">
                <h3>Total Tickets</h3>
                <p class="stats-number"><%= totalTickets %></p>
                <p class="stats-label">All Tickets</p>
            </div>
        </div>

        <div class="stats-card open-tickets">
            <div class="stats-icon">
                <i class="fas fa-folder-open"></i>
            </div>
            <div class="stats-info">
                <h3>Open Tickets</h3>
                <p class="stats-number"><%= openTickets %></p>
                <p class="stats-label">Requires Attention</p>
            </div>
        </div>

        <div class="stats-card in-progress">
            <div class="stats-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stats-info">
                <h3>In Progress</h3>
                <p class="stats-number"><%= inProgressTickets %></p>
                <p class="stats-label">Being Worked On</p>
            </div>
        </div>

        <div class="stats-card closed-tickets">
            <div class="stats-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stats-info">
                <h3>Closed Tickets</h3>
                <p class="stats-number"><%= closedTickets %></p>
                <p class="stats-label">Successfully Resolved</p>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-container {
        padding: 20px;
    }

    .welcome-section {
        text-align: center;
        margin-bottom: 30px;
    }

    .welcome-section h1 {
        color: #1f6a72;
        margin-bottom: 10px;
        font-size: 2.2em;
        font-weight: 600;
    }

    .subtitle {
        color: #666;
        font-size: 1.2em;
    }

    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-bottom: 40px;
    }

    .stats-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .stats-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(90deg, #1f6a72, #2c3e50);
    }

    .stats-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
    }

    .stats-icon {
        width: 70px;
        height: 70px;
        background: #f8f9fa;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 25px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .stats-icon i {
        font-size: 28px;
        color: #1f6a72;
    }

    .stats-info {
        flex: 1;
    }

    .stats-info h3 {
        margin: 0;
        color: #666;
        font-size: 1.1em;
        font-weight: 500;
        margin-bottom: 5px;
    }

    .stats-number {
        margin: 0;
        font-size: 32px;
        font-weight: 700;
        color: #1f6a72;
        line-height: 1.2;
    }

    .stats-label {
        margin: 5px 0 0;
        color: #888;
        font-size: 0.9em;
        font-weight: 500;
    }

    /* Card-specific styles */
    .total-tickets::before { background: linear-gradient(90deg, #1f6a72, #3498db); }
    .open-tickets::before { background: linear-gradient(90deg, #e74c3c, #f39c12); }
    .in-progress::before { background: linear-gradient(90deg, #f39c12, #2ecc71); }
    .closed-tickets::before { background: linear-gradient(90deg, #2ecc71, #1f6a72); }

    @media (max-width: 768px) {
        .stats-container {
            grid-template-columns: 1fr;
        }

        .stats-card {
            padding: 20px;
        }

        .stats-icon {
            width: 60px;
            height: 60px;
        }

        .stats-number {
            font-size: 28px;
        }
    }
</style>
